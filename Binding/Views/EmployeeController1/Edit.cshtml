@model EmpDeptModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post" action="/EmployeeController1/SaveEdit/@Model.Id">
    
    <div>
        <label>Name</label>
        <input type="text" name="Name" value="@Model.Name" id="Name" class="form form-control" />
        
    </div>

    <div>
        <label>Salary</label>
        <input type="number" name="Salary" value="@Model.Salary" id="Salary" class="form form-control" />

    </div>


    <div>
        <label>Address</label>
        <input type="text" name="Address" value="@Model.Address" id="Address" class="form form-control" />

    </div>

    <div>
        <label>Image</label>
        <input type="text" name="Image" value="@Model.Image" id="Image" class="form form-control" />

    </div>

    <div>
        <label>DeptmentId</label>
      
        <select name="Dept_Id" id="Dept_Id" class="form form-control" >
           
           @foreach(var item in Model.DeptList)
           {
               // to make Html select option selected which is already selected
               if(Model.Dept_Id == item.Id)
               {
                   <option value="@item.Id" selected="selected">@item.Name</option>
               }
               else
               {
                   <option value="@item.Id">@item.Name</option>
               }
              
           }

        </select>

    </div>


    
    <input type="submit" value="Save" class="btn btn-success" />

</form>

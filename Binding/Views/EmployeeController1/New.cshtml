@using MVC_1.Models
@model Employee

@{
    ViewData["Title"] = "New";
    SelectList deptOptions = new SelectList(ViewBag.DeptList, "Id", "Name");
}

<h1>New</h1>
<form method="post" asp-action="SaveNew" asp-controller="EmployeeController1">
    <div>
        <label asp-for="Name">Name</label>
        <input class="form form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Salary">Salary</label>
        <input class="form form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Address">Address</label>
        <input class="form form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Image">Image</label>
        <input class="form form-control" asp-for="Image" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Dept_Id">Department</label>
        <select class="form form-control" asp-items="deptOptions" asp-for="Dept_Id">
            <option value="">---Select Department---</option>
        </select>
        <span asp-validation-for="Dept_Id" class="text-danger"></span>
    </div>
    <input type="submit" value="Add" class="btn btn-success" />
</form>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
